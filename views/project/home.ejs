<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@25,400,0,0" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

<div class="mt-3 mb-3 container-fluid" style="display: flex; justify-content: space-between";>
    <h1 style="padding-left: 30px;"> Hey  <%= currentUser.username %> !</h1>
    <a href="/newProject" style="text-decoration: none; color: black;">
        <div style="display: flex; vertical-align: middle;">
            <p>Create new project</p>
            <button type="button" id="createBtn">+</button>  
        </div>
    </a>
    
</div>

<div class="container"">
          
    <h3>Your Projects:</h3>
    <%if (projects.length==0){ %>
        <p class="text-muted" style="text-align: center;"><i>Nothing to show</i></p>
    <% }else{ %>
    <div class="mb-3 cards">
        <% for (let project in projects){ %>
                <div class="card mb-3" style="width:20%">
                    <div class="card-body">
                        <h4 class="card-title"><%= projects[project].title %></h4>
                        <!-- <p class="card-text">Project type: <%= projects[project].type %></p> -->
                        <% if(projects[project].type=="Group Project"){ %>
                        <p><span class="material-symbols-outlined" style="vertical-align: middle;">groups</span>  Group Project</p>
                        <% }else{ %>
                            <p><span class="material-symbols-outlined" style="vertical-align: middle;">person</span>  Personal Project</p>
                        <%}%>
                        <p class="text-muted">Created at : <%= projects[project].date %></p>
                        <a href="/projects/<%=projects[project]._id %>" class="btn btn-primary">View</a>
                    </div>
                </div>
        <%}%>
    </div>
    <%}%>
    
